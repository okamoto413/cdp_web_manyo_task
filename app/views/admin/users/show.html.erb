<h1>ユーザ詳細ページ</h1>

<p>名前: <%= @user.name %></p>
<p>メールアドレス: <%= @user.email %></p>
<p>管理者権限: <%= @user.admin ? 'あり' : 'なし' %></p>

<h2>タスク一覧</h2>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>作成日時</th>
      <th>終了期限</th>
      <th>優先度</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td class="task_title"><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %>
        <%= task.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td class="task_deadline"><%= task.deadline_on %></td>
        <td class = "task_priority"><%= t("tasks_index.priorities.#{task.priority}") %></td>
        <td><%= t("tasks_index.statuses.#{task.status}") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '戻る', admin_users_path, id: 'back' %>