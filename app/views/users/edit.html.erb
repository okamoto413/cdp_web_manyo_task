<h1>アカウント編集ページ</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
<div>  
  <p><%= f.label :name, "名前" %></p>
  <p><%= f.text_field :name %></p>
</div>

<div>
  <p><%= f.label :email, "メールアドレス" %></p>
  <p><%= f.email_field :email %></p>
</div>  

<div>
  <p><%= f.label :password,  "パスワード" %></p>
  <p><%= f.password_field :password %></p>
</div>

<div>
  <p><%= f.label :password_confirmation, "パスワード（確認）" %></p>
  <p><%= f.password_field :password_confirmation %></p>
</div>  

<div>
  <%= f.submit "更新する",  id: "update-user" %>
</div>
  <% end %>
 
<div>
  <%= link_to '戻る', @user, id: "back" %> 
</div>
